<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">


    <persistence-unit name="pu1-mysql-masterapp" transaction-type="RESOURCE_LOCAL" >
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>org.tuyetdang.Entity.Major</class>
        <class>org.tuyetdang.Entity.Student</class>
        <class>org.tuyetdang.Entity.School</class>

        <!-- Cấu hình kết nối CSDL -->
        <properties>

            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/Lab3_cse456"/>

            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="123123123"/>

            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>


